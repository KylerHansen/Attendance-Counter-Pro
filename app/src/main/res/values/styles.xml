<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "CustomAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name = "CustomAppTheme.PopupOverlay" parent="Theme.AppCompat.Light"></style>

<!--Defaults-->

    <style name="alertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">?attr/alertDialogTextColor</item>
        <item name="android:textColorPrimary">?attr/alertDialogTextPrimaryColor</item>
    </style>

<!--End Defaults-->

<!--Fresh Theme-->
    <style name="FreshTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@color/backGroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/buttonFresh</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="cardStyle">@style/freshCardViewStyle</item>
        <item name="alertDialogTextColor">@color/colorPrimary</item>
        <item name="alertDialogTextPrimaryColor">@color/black</item>
    </style>

    <style name="buttonFresh" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/backGroundColor</item>
    </style>

    <style name="freshCardViewStyle" parent="@style/CardView.Light">
        <item name="android:background">@color/transparent</item>
    </style>



<!-- End Fresh Theme-->


<!--Dark Theme-->

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:background">#1B1B1B</item>
        <item name="colorAccent">@color/textDarkMode</item>
        <item name="buttonStyle">@style/buttonDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/textDarkMode</item>
        <item name="android:textColorHint">@color/textDarkMode</item>
        <item name="android:editTextColor">@color/textDarkMode</item>
        <item name="cardStyle">@style/darkCardViewStyle</item>
        <item name="alertDialogTextColor">@color/colorPrimary</item>
        <item name="alertDialogTextPrimaryColor">@color/textDarkMode</item>
    </style>

    <style name="buttonDark" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/backGroundColor</item>
    </style>

    <style name="darkCardViewStyle" parent="@style/CardView.Dark">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/textDarkMode</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>


<!--End Dark Theme-->



</resources>